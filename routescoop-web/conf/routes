# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET         /                         controllers.Home.index
GET         /ping                     controllers.Application.ping

GET         /authzero/callback        controllers.AuthZero.callback(code: Option[String])

GET         /strava/callback          controllers.Strava.callback(code: Option[String])
GET         /strava/authorize         controllers.Strava.authorize
POST        /strava/sync              controllers.Strava.synchData(userId: String)

GET         /login                    controllers.User.login
GET         /logout                   controllers.User.logout
GET         /profile                  controllers.User.profile


# Map static resources from the web jars to the /assets/lib URL path
GET         /assets/lib/*file         controllers.WebJarAssets.at(file)
# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file             controllers.Assets.versioned(path="/public", file: Asset)
